<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>TestTomcat</display-name>

  <servlet>
  	<servlet-name>CreateUserServlet</servlet-name>
    <servlet-class>servlet.UserServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>
  
   <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<servlet-class>servlet.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>AddFriendServlet</servlet-name>
  	<servlet-class>servlet.AddFriendServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>DeleteFriendServlet</servlet-name>
  	<servlet-class>servlet.DeleteFriendServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>FriendListServlet</servlet-name>
  	<servlet-class>servlet.FriendListServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>SearchFriendServlet</servlet-name>
  	<servlet-class>servlet.SearchFriendServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>AddMessageServlet</servlet-name>
    <servlet-class>servlet.AddMessageServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CreateUserServlet</servlet-name>
    <url-pattern>/user/createuser</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/user/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/user/logout</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AddFriendServlet</servlet-name>
    <url-pattern>/user/addfriend</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>DeleteFriendServlet</servlet-name>
    <url-pattern>/user/deletefriend</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>FriendListServlet</servlet-name>
    <url-pattern>/user/friendlist</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>SearchFriendServlet</servlet-name>
    <url-pattern>/user/friendusername</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AddMessageServlet</servlet-name>
    <url-pattern>/user/addmessage</url-pattern>
  </servlet-mapping>
</web-app>


